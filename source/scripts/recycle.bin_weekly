#!/bin/bash
source /boot/config/plugins/recycle.bin/recycle.bin.cfg

find /mnt/user/*/.Recycle.Bin/* -mtime +$AGE -delete 2>/dev/null

logger "Weekly: Files older than $AGE days have been removed" -t"Recycle Bin"

if [ $NOTIFY = "yes" ]; then
	/usr/local/emhttp/webGui/scripts/notify -e "unRAID Server Notice" -s "Recycle Bin" -d "Weekly: Files older than $AGE days have been removed" -i "normal"
fi
