#!/bin/bash
source /boot/config/plugins/recycle.bin/recycle.bin.cfg

# Stop vfs recycle
/etc/rc.d/rc.recycle.bin stop

# Update the valid users and parameters in the smb-extra.conf file
/etc/rc.d/rc.recycle.bin smb

# Start vfs recycle if service is enabled
if [ $SERVICE = "enable" ]; then
	/etc/rc.d/rc.recycle.bin start
fi
