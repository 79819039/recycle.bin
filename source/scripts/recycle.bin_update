#!/bin/bash
source /boot/config/plugins/recycle.bin/recycle.bin.cfg

# Stop vfs recycle
/usr/local/emhttp/plugins/recycle.bin/scripts/rc.recycle.bin stop

# Update the valid users and parameters in the smb-extra.conf file
/usr/local/emhttp/plugins/recycle.bin/scripts/rc.recycle.bin smb

# Start vfs recycle if service is enabled
if [ $SERVICE = "enable" ]; then
	/usr/local/emhttp/plugins/recycle.bin/scripts/rc.recycle.bin start
fi
